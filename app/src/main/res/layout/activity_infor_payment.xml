<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/font_large"
    tools:context=".InforPaymentActivity">


        <LinearLayout
            android:id="@+id/top"
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Thông tin đơn hàng"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="#D81B60"
                />

        </LinearLayout>
        <LinearLayout
           android:paddingTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên:" />
            <EditText
                android:id="@+id/FullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:paddingTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng:" />
            <EditText
               android:id="@+id/Adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:paddingTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại" />
            <EditText
                android:id="@+id/Phone"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    <LinearLayout
        android:paddingTop="270dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức thanh toán" />
        <Spinner
            android:id="@+id/cboPayment"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:paddingTop="320dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức vận chuyển" />
        <Spinner
            android:id="@+id/cboShip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:paddingTop="370dp"
        android:id="@+id/z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lời nhắn" />
        <EditText
            android:id="@+id/Desscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:paddingTop="450dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền thanh toán" />
        <TextView
            android:id="@+id/txtTotal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#FFB600"/>


    </LinearLayout>


<Button
    android:id="@+id/Submit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Đặt hàng"
    android:background="@drawable/buttonpayment"
    android:layout_alignParentBottom="true"/>

</RelativeLayout>